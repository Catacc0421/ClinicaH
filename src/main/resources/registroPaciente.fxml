<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;">

    <VBox alignment="CENTER" layoutY="10.0" prefHeight="100.0" prefWidth="800.0" spacing="10">
        <Label text="Registro de Pacientes" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label text="Por favor ingrese los datos del paciente" style="-fx-font-size: 16px;"/>
    </VBox>


    <VBox layoutX="100.0" layoutY="150.0" spacing="20.0" prefWidth="600.0" alignment="TOP_CENTER">


        <HBox spacing="20.0">
            <!-- Nombre -->
            <VBox spacing="5">
                <Label text="Nombre" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextField fx:id="nombreField" promptText="Ingrese el nombre completo" style="-fx-background-radius: 10; -fx-padding: 10;"/>
            </VBox>


            <VBox spacing="5">
                <Label text="Cédula" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextField fx:id="cedulaField" promptText="Ingrese la cédula" style="-fx-background-radius: 10; -fx-padding: 10;"/>
            </VBox>
        </HBox>


        <HBox spacing="20.0">
            <!-- Teléfono -->
            <VBox spacing="5">
                <Label text="Teléfono" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextField fx:id="telefonoField" promptText="Ingrese el teléfono" style="-fx-background-radius: 10; -fx-padding: 10;"/>
            </VBox>


            <VBox spacing="5">
                <Label text="Email" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextField fx:id="emailField" promptText="Ingrese el correo electrónico" style="-fx-background-radius: 10; -fx-padding: 10;"/>
            </VBox>
        </HBox>


        <HBox spacing="20.0">

            <VBox spacing="5">
                <Label text="Tipo de Suscripción" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="suscripcionBox" promptText="Seleccione la suscripción" style="-fx-background-radius: 10;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Básica"/>
                            <String fx:value="Premium"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
        </HBox>
    </VBox>


    <HBox alignment="CENTER" layoutY="500.0" spacing="20.0" prefWidth="800.0">
        <Button text="Registrar" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10;" prefWidth="150.0" onAction="#registrarPaciente"/>
        <Button text="Cancelar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10;" prefWidth="150.0" onAction="#cancelarRegistro"/>
    </HBox>

</AnchorPane>
